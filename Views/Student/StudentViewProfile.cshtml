@model Digital_Resource_Occupancy_System.Models.Student.studentModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: white;
        }

        img {
            height: 150px;
            width: 250px;
        }

        .bg-image {
            background-image: url('/images/c11.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh; /* Full height */
        }

        .card {
            background-color: rgb(83, 122, 146);
            border-radius: 10px;
            padding: 50px;
            width: 100%; /* Ensure the card takes up the available width */
            max-width: 450px; /* Max width for the card */
        }

        .card-body {
            background-color: rgb(206, 216, 221);
            padding: 20px;
            border-radius: 20px;
            font-size: medium; /* Default font size for body text */
        }

        /* Adjust heading font sizes */
        h3 {
            font-size: 25px; /* Increase size for profile heading */
            margin: 5px 0; /* Add margin for spacing */
        }

        h4 {
            font-size: 20px; /* Increase size for signature heading */
            margin: 5px 0; /* Add margin for spacing */
        }

        /* Adjust strong tags for labels */
        strong {
            font-size: 20px; /* Increase size for labels */
            margin-right: 5px; /* Add space between label and value */
        }

        p {
            font-size: 18px;
        }

    

        .text-primary {
            color: #337ab7;
        }

        .btn-primary {
            background-color: rgb(83, 122, 146);
            border-color: #337ab7;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 40px;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #23527c;
                border-color: #23527c;
            }
      

       
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 d-none d-md-block bg-image"></div>
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h2 class="display-7 text-center">Profile</h2>
                        <p class="text-muted mb-4 text-center">view your details!</p>

                        <h3>@Model.StudentName</h3>
                        <p><strong>Student ID:</strong> @Model.StudentID</p>
                        <p><strong>Email:</strong> @Model.StudentEmail</p>
                        <p><strong>Program:</strong> @Model.Program</p>

                        <p><strong>Collage Year:</strong> @Model.CollageYear</p>
                        <p><strong>Semester:</strong> @Model.Sem</p>
                        <p><strong>Division:</strong> @Model.Div</p>
                        <p><strong>Signature:</strong> </p>

                        @if (!string.IsNullOrEmpty(Model.Signature))
                        {
                            <img src="@Model.Signature" alt="Signature" class="signature" />
                        }
                        else
                        {
                            <p>No signature uploaded.</p>
                        }

                        <button type="button" class="btn btn-primary" onclick="window.location.href='/Student/UpdateStudentData/@Model.StudentID'">Update</button>

                        <button type="button" class="btn btn-primary rounded-pill shadow-sm mt-2" onclick="window.location.href='/Student/StudentDashboard'">
                            BACK
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>




