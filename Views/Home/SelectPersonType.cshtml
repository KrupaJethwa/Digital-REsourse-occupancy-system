
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Dashboard</title>

    <!-- Load Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Load Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: white;
        }

        .bg-image {
            background-image: url('/images/c11.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
        }

        .card {
            background-color: rgb(83, 122, 146);
            border-radius: 10px;
            padding: 50px;
            width: 100%; /* Change this to a fixed width or percentage */
            max-width: 600px; /* Increased max-width to allow more space */
        }

        .card-body {
            background-color: rgb(206, 216, 221);
            padding: 20px;
            border-radius: 20px;
            text-align: center;
        }

        .btn-primary {
            background-color: rgb(83, 122, 146);
            border-color: #337ab7;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 40px;
            width: 100%;
            margin-bottom: 15px; /* Same margin between all buttons */
        }

            .btn-primary:hover {
                background-color: #23527c;
                border-color: #23527c;
            }

        .card-body h3 {
            margin-bottom: 30px;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 d-none d-md-block bg-image"></div>
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h2 class="display-4 text-center text1">
                            Digital Resource Occupancy System
                        </h2>

                        <form>
                            <label for="inputYear" class="form-label">Please select your role to continue</label>
                            <button type="button" class="btn btn-primary rounded-pill shadow-sm mt-2"
                                    onclick="window.location.href='/Faculty/FacultyRegister'">
                                Faculty
                            </button>

                            <button type="button" class="btn btn-primary rounded-pill shadow-sm mt-2"
                                    onclick="window.location.href='/Student/StudentLogin'">
                                Student
                            </button>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

























